<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actividades.CrearPublicacionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="23dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/retroceder"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="27dp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Crear publicación"
            tools:layout_editor_absoluteX="53dp"
            tools:layout_editor_absoluteY="27dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="184dp"
            android:layout_height="161dp"
            tools:layout_editor_absoluteX="113dp"
            tools:layout_editor_absoluteY="61dp"
            tools:srcCompat="@tools:sample/avatars" />

        <EditText
            android:id="@+id/nombrePlatoEditText"
            android:layout_width="299dp"
            android:layout_height="39dp"
            android:ems="10"
            android:inputType="text"
            android:text="Nombre del Plato"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="53dp"
            tools:layout_editor_absoluteY="242dp" />
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Ingredientes"
            tools:layout_editor_absoluteX="53dp"
            tools:layout_editor_absoluteY="296dp" />

        <EditText
            android:id="@+id/ingredientesEditText"
            android:layout_width="300dp"
            android:layout_height="117dp"
            android:text="TextView"
            tools:layout_editor_absoluteX="53dp"
            tools:layout_editor_absoluteY="334dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Preparación"
            tools:layout_editor_absoluteX="53dp"
            tools:layout_editor_absoluteY="461dp" />

        <EditText
            android:id="@+id/preparacionEditText"
            android:layout_width="300dp"
            android:layout_height="124dp"
            android:text="TextView"
            tools:layout_editor_absoluteX="53dp"
            tools:layout_editor_absoluteY="493dp" />

        <Button
            android:id="@+id/button1"
            android:layout_width="124dp"
            android:layout_height="43dp"
            android:text="Cancelar"
            tools:layout_editor_absoluteX="228dp"
            tools:layout_editor_absoluteY="645dp" />

        <Button
            android:id="@+id/publicar"
            android:layout_width="131dp"
            android:layout_height="42dp"
            android:text="Publicar"
            tools:layout_editor_absoluteX="53dp"
            tools:layout_editor_absoluteY="647dp" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>